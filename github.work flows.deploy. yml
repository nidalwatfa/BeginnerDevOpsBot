name: Deploy Website

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.12'

      - name: Run deployment script
        run: |
          python deploy_website.py

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: deployed-website
          path: /tmp/deploy_output/
          retention-days: 7
